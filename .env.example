# CROWD Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/crowd_events

# JWT Secrets
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-super-secure-session-secret-here

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CrowdAdmin2024!SecurePassword
ADMIN_EMAIL=admin@crowd.com
ADMIN_JWT_SECRET=your-super-secure-admin-jwt-secret-here

# Server
PORT=3002
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (if using email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload (if using file uploads)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12